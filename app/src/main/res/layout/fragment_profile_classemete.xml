<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.beballer.beballer.ui.player.dash_board.find.player_profile.class_mete.ProfileClassMateFragmentVM" />

        <variable
            name="type"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dash_board.find.player_profile.class_mete.ProfileClassmateFragment">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/TextView.InterMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ranking"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/rankingSearchView"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:background="@drawable/search_view_background"
            android:backgroundTint="@color/eeeeef"
            android:focusable="false"
            android:fontFamily="@font/inter_regular"
            app:iconifiedByDefault="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:queryBackground="@null"
            app:searchIcon="@drawable/ic_search" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/rankingSearchView"
            app:layout_constraintEnd_toStartOf="@+id/tvRegion"
            android:gravity="center"
            android:onClick="@{v->vm.onClick(v)}"
            app:layout_constraintTop_toBottomOf="@+id/rankingSearchView"
            android:text="City"
            android:fontFamily="@font/inter_medium"
            android:textColor="@{type==1 ?@color/black_000000 :@color/beballer_medium_grey}"
            android:layout_marginTop="@dimen/_10sdp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRegion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/tvCity"
            android:gravity="center"
            android:onClick="@{v->vm.onClick(v)}"
            app:layout_constraintEnd_toStartOf="@+id/tvCountry"
            app:layout_constraintBottom_toBottomOf="@+id/tvCity"
            app:layout_constraintTop_toTopOf="@+id/tvCity"
            android:text="Region"
            android:fontFamily="@font/inter_medium"
            android:textColor="@{type==2 ?@color/black_000000 :@color/beballer_medium_grey}"
     />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCountry"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/tvRegion"
            app:layout_constraintEnd_toEndOf="@+id/rankingSearchView"
            app:layout_constraintBottom_toBottomOf="@+id/tvCity"
            app:layout_constraintTop_toTopOf="@+id/tvCity"
            android:text="Country"
            android:onClick="@{v->vm.onClick(v)}"
            android:fontFamily="@font/inter_medium"
            android:textColor="@{type==3 ?@color/black_000000 :@color/beballer_medium_grey}"
           />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRanking"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tvCountry"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:clipToPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            tools:listitem="@layout/rv_ranking_item"
            tools:itemCount="4"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_6sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
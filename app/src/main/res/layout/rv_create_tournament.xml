<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTournamentCourtName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="LabelFor" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etTournamentCourtsName"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/player_bg"
            android:fontFamily="@font/inter_medium"
            android:gravity="start|center"
            android:inputType="textCapSentences|textNoSuggestions"
            android:letterSpacing="0"
            android:maxLines="1"
            android:paddingStart="@dimen/_40sdp"
            android:textColor="@color/black"
            android:textColorHint="@color/beballer_purple_grey"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTournamentCourtName"
            app:layout_constraintVertical_bias="0" />


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_22ssp"
            android:layout_height="@dimen/_22ssp"
            android:layout_marginStart="@dimen/_8sdp"
            android:src="@drawable/ic_court_24"
            app:layout_constraintBottom_toBottomOf="@+id/etTournamentCourtsName"
            app:layout_constraintStart_toStartOf="@+id/etTournamentCourtsName"
            app:layout_constraintTop_toTopOf="@+id/etTournamentCourtsName" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.beballer.beballer.ui.player.dash_board.find.game.create_game.CreateGameFragmentVM" />

        <variable
            name="buttonCheck"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dash_board.find.game.create_game.CreateGameFragment">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cancelImage"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="@dimen/_25sdp"
            android:onClick="@{v->vm.onClick(v)}"
            android:padding="6dp"
            android:src="@drawable/back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/TextView.InterMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Game"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintBottom_toBottomOf="@+id/cancelImage"
            app:layout_constraintStart_toEndOf="@+id/cancelImage"
            app:layout_constraintTop_toTopOf="@+id/cancelImage" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            android:paddingBottom="@dimen/_15sdp"
            app:layout_constraintBottom_toTopOf="@+id/nextBtnDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"

            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPrivate"
                    style="@style/TextView.InterMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginEnd="-12dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Private"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="bold"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="@+id/switchVisibility"
                    app:layout_constraintEnd_toStartOf="@+id/switchVisibility"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintTop_toTopOf="@+id/switchVisibility" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchVisibility"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginTop="-10dp"
                    android:scaleY="1.1"
                    android:thumb="@drawable/thum_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:track="@drawable/track_background" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPublic"
                    style="@style/TextView.InterMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Public"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="bold"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="@+id/switchVisibility"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@+id/switchVisibility"
                    app:layout_constraintTop_toTopOf="@+id/switchVisibility" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clGameCreate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/switchVisibility"
                    app:layout_constraintVertical_bias="0.5"
                    app:layout_constraintVertical_chainStyle="packed">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/game_settings_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_bold"
                        android:maxLines="2"
                        android:text="Game Creation:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvGameMode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/card_not_selected"
                        android:drawablePadding="@dimen/_6sdp"
                        android:elevation="10dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_bold"
                        android:foreground="@drawable/ripple_effect"
                        android:gravity="center"
                        android:lines="2"
                        android:maxLines="2"
                        android:onClick="@{v->vm.onClick(v)}"
                        android:paddingHorizontal="4dp"
                        android:paddingVertical="8dp"
                        android:text="1 v 1"
                        android:textColor="@color/black"
                        android:textColorHint="@color/beballer_purple_grey"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        app:drawableTint="@color/organize_color"
                        app:drawableTopCompat="@drawable/ic_circle_basketball_40"
                        app:layout_constraintEnd_toStartOf="@id/tvGameCourt"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/game_settings_tv" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvGameCourt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/card_not_selected"
                        android:drawablePadding="@dimen/_6sdp"
                        android:elevation="10dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_bold"
                        android:textStyle="bold"
                        android:foreground="@drawable/ripple_effect"
                        android:gravity="center"
                        android:lines="2"
                        android:maxLines="2"
                        android:onClick="@{v->vm.onClick(v)}"
                        android:paddingHorizontal="4dp"
                        android:paddingVertical="8dp"
                        android:text="Court"
                        android:textColor="@color/black"
                        android:textColorHint="@color/beballer_purple_grey"
                        android:textSize="11sp"
                        android:visibility="visible"
                        app:drawableTint="@color/organize_color"
                        app:drawableTopCompat="@drawable/ic_court_40"
                        app:layout_constraintBottom_toBottomOf="@+id/tvGameMode"
                        app:layout_constraintEnd_toStartOf="@+id/game_referee_tv"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/tvGameMode"
                        app:layout_constraintTop_toTopOf="@id/tvGameMode"
                        app:layout_constraintVertical_bias="1.0" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/game_court_image"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@color/white"
                        android:elevation="10dp"
                        android:foreground="@drawable/ripple_effect"
                        android:scaleType="centerCrop"
                        android:src="@drawable/loading_layout"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/tvGameCourt"
                        app:layout_constraintEnd_toEndOf="@id/tvGameCourt"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="@id/tvGameCourt"
                        app:layout_constraintTop_toTopOf="@+id/tvGameCourt"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
                        app:strokeColor="@color/beballer_purple_grey"
                        app:strokeWidth="1dp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/no_court_picture_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:elevation="11dp"
                        android:src="@drawable/round_no_photography_24"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/game_court_image"
                        app:layout_constraintEnd_toEndOf="@+id/game_court_image"
                        app:layout_constraintStart_toStartOf="@+id/game_court_image"
                        app:layout_constraintTop_toTopOf="@id/game_court_image"
                        app:tint="@color/organize_color" />

                    <TextView
                        android:id="@+id/game_referee_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/card_not_selected"
                        android:drawablePadding="@dimen/_6sdp"
                        android:elevation="10dp"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_bold"
                        android:foreground="@drawable/ripple_effect"
                        android:gravity="center"
                        android:onClick="@{v->vm.onClick(v)}"
                        android:paddingHorizontal="4dp"
                        android:paddingVertical="14dp"
                        android:text="Auto-refereeing"
                        android:textColor="@color/black"
                        android:textColorHint="@color/beballer_purple_grey"
                        android:textSize="11sp"
                        app:drawableTint="@android:color/transparent"
                        app:drawableTopCompat="@drawable/ic_baseline_square_40"
                        app:layout_constraintBottom_toBottomOf="@+id/tvGameMode"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/tvGameCourt"
                        app:layout_constraintTop_toTopOf="@id/tvGameMode" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/game_referee_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:elevation="11dp"
                        android:src="@drawable/ic_whistle_40"
                        app:layout_constraintEnd_toEndOf="@id/game_referee_tv"
                        app:layout_constraintStart_toStartOf="@id/game_referee_tv"
                        app:layout_constraintTop_toTopOf="@id/game_referee_tv"
                        app:tint="@color/organize_color" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/game_date_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="20dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_bold"
                        android:maxLines="2"
                        android:text="Pick the date of the game"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/game_referee_tv" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvGameStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/gradient_badges_progression"
                        android:backgroundTint="#bbbbbc"
                        android:elevation="10dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_medium"
                        android:foreground="@drawable/ripple_effect"
                        android:gravity="center"
                        android:maxLines="2"
                        android:padding="10dp"
                        android:text="28 may 2025"
                        android:textColor="@color/black"
                        android:textColorHint="@color/beballer_purple_grey"
                        android:textSize="@dimen/_9ssp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/game_start_time_tv"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/game_date_tv" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/game_start_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/gradient_badges_progression"
                        android:backgroundTint="#bbbbbc"
                        android:fontFamily="@font/inter_medium"
                        android:foreground="@drawable/ripple_effect"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="18:15"
                        android:textColor="@color/black"
                        android:textColorHint="@color/beballer_purple_grey"
                        android:textSize="@dimen/_9ssp"
                        app:layout_constraintBottom_toBottomOf="@+id/tvGameStartDate"
                        app:layout_constraintStart_toEndOf="@id/tvGameStartDate"
                        app:layout_constraintTop_toTopOf="@id/tvGameStartDate" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ballers_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/clGameCreate"
                    tools:visibility="visible">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvHomeTeam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_bold"
                        android:maxLines="2"
                        android:text="Home team"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvHomeTeam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_10sdp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvHomeTeam"
                        tools:itemCount="6"
                        tools:listitem="@layout/rv_team_item" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvOutsideTeam"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_bold"
                        android:maxLines="2"
                        android:text="Outside team"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rvHomeTeam" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvOutsideTeam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_10sdp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvOutsideTeam"
                        tools:listitem="@layout/rv_out_side_item" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/nextBtnDivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            app:dividerColor="#D4D4D4"
            app:layout_constraintBottom_toTopOf="@id/btnNext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnNext"
            style="@style/GreenButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginHorizontal="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/green_btn_bg"
            android:backgroundTint="@{buttonCheck?@color/green:@color/dark_AAB9EF}"
            android:onClick="@{v->vm.onClick(v)}"
            android:text="@string/next"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
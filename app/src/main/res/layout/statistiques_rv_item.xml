<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="callback"
            type="com.beballer.beballer.base.SimpleRecyclerViewAdapter.SimpleCallback" />

        <variable
            name="pos"
            type="Integer" />

        <variable
            name="bean"
            type="com.beballer.beballer.data.model.StatistModel" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/game_mode_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/inter_medium"
            android:includeFontPadding="false"
            android:text="@{bean.name}"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/mode_1VS11" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:includeFontPadding="false"
            android:layout_marginBottom="@dimen/_2sdp"
            android:text="@string/statistics_Victoires"
            android:textColor="#79828B"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/statistics_card"
            app:layout_constraintStart_toStartOf="@+id/statistics_card" />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:includeFontPadding="false"
            android:text="@string/statistics_Defaites"
            android:layout_marginBottom="@dimen/_2sdp"
            android:textColor="#79828B"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/statistics_card"
            app:layout_constraintEnd_toEndOf="@+id/statistics_card" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/statistics_card"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/card_background_seleted_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_mode_tv">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/progressionGuideline"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    setProgress="@{bean.point}"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.2"
                    />

                <View
                    android:id="@+id/background_progression_view"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/gradient_statistics_progression"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/progressionGuideline"
                    app:layout_constraintHorizontal_bias="0"
                    android:progress="100"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/wins_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:elevation="3dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="4" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/losses_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:elevation="3dp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="1" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/bottom_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dividerColor="#D4D4D4"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clCommon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_15sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivCommonPostProfile"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_round_account_circle_40"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCommonPostName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:ellipsize="end"
            android:fontFamily="@font/inter_semi_bold"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="FossesMarlyDasket"
            android:textColor="#1B1B1B"
            android:textSize="@dimen/_12ssp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toTopOf="@+id/tvGameTypeUsername"
            app:layout_constraintEnd_toStartOf="@id/ivGameVerification"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/ivCommonPostProfile"
            app:layout_constraintTop_toTopOf="@+id/ivCommonPostProfile"
            app:layout_constraintVertical_chainStyle="packed" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivGameVerification"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="@dimen/_4sdp"
            android:src="@drawable/ic_round_verified_24"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/tvCommonPostName"
            app:layout_constraintEnd_toStartOf="@+id/ivCommonMenu"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/tvCommonPostName"
            app:layout_constraintTop_toTopOf="@+id/tvCommonPostName"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvGameTypeUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:includeFontPadding="false"
            android:text="@string/fossesmarlybasket"
            android:textColor="@color/grey_50"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintBottom_toTopOf="@id/tvPublisherSector"
            app:layout_constraintStart_toStartOf="@+id/tvCommonPostName"
            app:layout_constraintTop_toBottomOf="@+id/tvCommonPostName" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPublisherSector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:includeFontPadding="false"
            android:text="Chargement..."
            android:textColor="@color/grey_50"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintBottom_toBottomOf="@+id/ivCommonPostProfile"
            app:layout_constraintStart_toStartOf="@+id/tvCommonPostName"
            app:layout_constraintTop_toBottomOf="@+id/tvGameTypeUsername" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/inter_regular"
            android:text="21 h"
            android:textColor="@color/beballer_medium_grey"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintBottom_toBottomOf="@id/ivCommonMenu"
            app:layout_constraintEnd_toStartOf="@+id/ivCommonMenu"
            app:layout_constraintTop_toTopOf="@+id/ivCommonMenu" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCommonMenu"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivGameVerification"
            app:srcCompat="@drawable/round_more_vert_24"
            app:tint="@color/beballer_medium_grey" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCommonPostDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_13sdp"
        android:layout_marginTop="4dp"
        android:autoLink="all"
        android:fontFamily="@font/inter_medium"
        android:text="Benef has added a new 33-hectare playground in the city.Big thanks for your contribution ðŸ™Œ"
        android:textColor="@color/black_000000"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintTop_toBottomOf="@+id/clGame"
        tools:layout_editor_absoluteX="17dp" />




    <androidx.cardview.widget.CardView
        android:id="@+id/gameCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCommonPostDesc"
        app:cardElevation="@dimen/_2sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivGame"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/grey"
                android:padding="@dimen/_4sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/iv_event"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.36"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize8Percent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGameDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="Wednesday 14.06.2025"
                android:textColor="@color/black_000000"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toStartOf="@id/tvGameTime"
                app:layout_constraintStart_toEndOf="@+id/ivGame"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGameTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="12:00"
                android:textColor="@color/black_000000"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintBottom_toBottomOf="@+id/tvGameDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGameCity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="Bruges 33520"
                android:textColor="@color/beballer_grey"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvGameDate"
                app:layout_constraintTop_toBottomOf="@+id/tvGameDate" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGameCountry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="City Stade Albert\nGalinier"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="@+id/tvGameCity"
                app:layout_constraintStart_toStartOf="@+id/tvGameCity"
                app:layout_constraintTop_toBottomOf="@+id/tvGameCity" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGameMode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:background="@drawable/card_not_selected"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:paddingHorizontal="4dp"
                android:paddingVertical="10dp"
                android:text="1x1"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                app:drawableTint="@color/games_dark_color"
                app:drawableTopCompat="@drawable/circle_basketball_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvGamePlayers"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/tvGameCity"
                app:layout_constraintTop_toBottomOf="@id/tvGameCountry" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGamePlayers"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/card_not_selected"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:paddingHorizontal="4dp"
                android:paddingVertical="10dp"
                android:text="2x2 player"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp"
                app:drawableTint="@color/games_dark_color"
                app:drawableTopCompat="@drawable/round_people_24"
                app:layout_constraintBottom_toBottomOf="@+id/tvGameMode"
                app:layout_constraintEnd_toStartOf="@+id/tvGameStatus"
                app:layout_constraintStart_toEndOf="@+id/tvGameMode"
                app:layout_constraintTop_toTopOf="@id/tvGameMode" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGameStatus"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/card_not_selected"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:paddingHorizontal="4dp"
                android:paddingVertical="10dp"
                android:text="Done"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp"
                app:drawableTint="@color/games_dark_color"
                app:drawableTopCompat="@drawable/round_call_received_24"
                app:layout_constraintBottom_toBottomOf="@+id/tvGameMode"
                app:layout_constraintEnd_toEndOf="@+id/tvGameCity"
                app:layout_constraintStart_toEndOf="@+id/tvGamePlayers"
                app:layout_constraintTop_toTopOf="@id/tvGameMode" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



    <HorizontalScrollView
        android:id="@+id/buttonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        app:layout_constraintEnd_toStartOf="@id/tvSubscribe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gameCardView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivCommonLike"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_like_0_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGameLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:fontFamily="@font/inter_semi_bold"
                android:includeFontPadding="false"
                android:text="0"
                android:textColor="#707070"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivCommonLike"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivCommonComment"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:padding="@dimen/_2sdp"
                app:layout_constraintStart_toEndOf="@id/tvGameLike"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_bubble_left_24"
                app:tint="@color/black" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGameComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:fontFamily="@font/inter_semi_bold"
                android:includeFontPadding="false"
                android:text="0"
                android:textColor="#707070"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivCommonComment"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivCommonShare"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:padding="@dimen/_2sdp"
                app:layout_constraintStart_toEndOf="@id/tvGameComment"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrowshape_turn_up_right_24"
                app:tint="@color/black" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGameShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:fontFamily="@font/inter_semi_bold"
                android:includeFontPadding="false"
                android:text="0"
                android:textColor="#707070"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivCommonShare"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSubscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:fontFamily="@font/inter_bold"
        android:includeFontPadding="false"
        android:paddingHorizontal="@dimen/_4sdp"
        android:paddingVertical="@dimen/_8ssp"
        android:text="@string/subscribe"
        android:textColor="@color/beballer_blue"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="@id/buttonsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonsLayout"
        app:layout_constraintTop_toTopOf="@id/buttonsLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>
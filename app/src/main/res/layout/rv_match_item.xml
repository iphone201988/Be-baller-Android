<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="callback"
            type="com.beballer.beballer.base.SimpleRecyclerViewAdapter.SimpleCallback" />

        <variable
            name="pos"
            type="Integer" />

        <variable
            name="bean"
            type="com.beballer.beballer.data.model.MatchModel" />


        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeader"
            style="@style/TextView.InterMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center"
            android:text="@{bean.headingTitle}"
            android:textColor="@color/beballer_grey"
            android:textSize="@dimen/_15ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_6sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_6sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvHeader">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTitle"
                    style="@style/TextView.InterMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:gravity="center"
                    android:text="@{bean.title}"
                    android:textColor="@color/black_000000"
                    android:textSize="@dimen/_13ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSubTitle"
                    style="@style/TextView.InterMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{bean.subTitle}"
                    android:textColor="@color/beballer_grey"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitle" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPlan"
                    style="@style/TextView.InterMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_6sdp"
                    android:background="@drawable/player_bg"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_4sdp"
                    android:text="Schedule"
                    android:textColor="@color/beballer_grey"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivNewTeam"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:src="@drawable/profile"
                    android:tint="@color/grey"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvPlan" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvNewTeam"
                    style="@style/TextView.InterMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:gravity="center"
                    android:text="@{bean.newTeam}"
                    android:textColor="@color/beballer_grey"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintStart_toStartOf="@+id/ivNewTeam"
                    app:layout_constraintTop_toBottomOf="@+id/ivNewTeam"
                    tools:text="new teams 1" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivTeam"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:src="@drawable/profile"
                    android:tint="@color/grey"
                    app:layout_constraintBottom_toBottomOf="@+id/ivNewTeam"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ivNewTeam" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTeam"
                    style="@style/TextView.InterMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:gravity="center"
                    android:text="@{bean.team}"
                    android:textColor="@color/beballer_grey"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintEnd_toEndOf="@+id/ivTeam"
                    app:layout_constraintStart_toStartOf="@+id/ivTeam"
                    app:layout_constraintTop_toBottomOf="@+id/ivTeam" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPointStart"
                    style="@style/TextView.InterMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/beballer_grey"
                    android:textSize="@dimen/_20ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPointDash"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tvPointDash"
                    app:layout_constraintTop_toTopOf="@+id/tvPointDash" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPointDash"
                    style="@style/TextView.InterMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_6sdp"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/beballer_grey"
                    android:textSize="@dimen/_20ssp"
                    app:layout_constraintBottom_toTopOf="@+id/tvEditScore"
                    app:layout_constraintEnd_toEndOf="@+id/ivTeam"
                    app:layout_constraintStart_toStartOf="@+id/ivNewTeam" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPointEnd"
                    style="@style/TextView.InterMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/beballer_grey"
                    android:textSize="@dimen/_20ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPointDash"
                    app:layout_constraintStart_toEndOf="@+id/tvPointDash"
                    app:layout_constraintTop_toTopOf="@+id/tvPointDash" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvEditScore"
                    style="@style/TextView.InterMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_btn_bg"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:text="Edit score"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvNewTeam"
                    app:layout_constraintEnd_toEndOf="@+id/ivTeam"
                    app:layout_constraintStart_toStartOf="@+id/ivNewTeam" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_8sdp"
                    android:gravity="center"
                    android:text="Poule A"
                    android:textColor="@color/beballer_grey"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="invisible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvEditScore" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextView.InterMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Poule A"
            android:textColor="@color/beballer_grey"
            android:textSize="@dimen/_11ssp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardMatch" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.beballer.beballer.ui.player.dash_board.find.player_profile.PlayerProfileActivityVM" />

        <variable
            name="pos"
            type="Integer" />

        <variable
            name="bean"
            type="com.beballer.beballer.data.model.ProfileByUser" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dash_board.find.player_profile.PlayerProfileActivity">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cancelImage"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="2dp"
            android:onClick="@{v->vm.onClick(v)}"
            android:padding="6dp"
            android:src="@drawable/back_button"
            app:layout_constraintBottom_toBottomOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardView" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/TextView.InterMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text='@{bean.firstName!=null ?bean.firstName : "user"+ " " + (bean.lastName != null ? bean.lastName : "")}'
            android:textSize="@dimen/_15ssp"
            app:layout_constraintBottom_toBottomOf="@+id/cardView"
            app:layout_constraintStart_toEndOf="@+id/cancelImage"
            app:layout_constraintTop_toTopOf="@+id/cardView" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/header_profile_verification_image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_4sdp"
            android:src="@drawable/ic_round_verified_24"
            android:visibility="gone"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/tvTitle"
            app:layout_constraintTop_toTopOf="@+id/tvTitle"
            tools:visibility="visible" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:onClick="@{v->vm.onClick(v)}"
            app:cardCornerRadius="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSubscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@{bean.isSubscribed == false ?@color/beballer_blue : @color/text_light}"
                android:includeFontPadding="false"
                android:paddingHorizontal="@dimen/_15sdp"
                android:paddingVertical="@dimen/_6sdp"
                android:text='@{bean.isSubscribed ==false ? "Subscribe" : "Unsubscribe"}'
                android:textColor="@color/white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPlayerTopInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivProfileImage"
                setImageFromUrl="@{bean.profilePicture}"
                android:layout_width="81dp"
                android:layout_height="81dp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:contentDescription="@string/done"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_round_account_circle_40"
                app:layout_constraintBottom_toBottomOf="@+id/divider"
                app:layout_constraintEnd_toStartOf="@+id/middle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvUsernameProfile"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/middle_badge"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardBadgeImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivProfileImage"
                app:layout_constraintEnd_toStartOf="@+id/middle"
                app:layout_constraintStart_toStartOf="@+id/middle_badge">

                <ImageView
                    android:id="@+id/badge_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/done"
                    android:scaleType="fitCenter"
                    android:src="@drawable/badgeloading" />
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/middle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.45" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvUsernameProfile"
                setTextEmptyCheck="@{bean.username}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_regular"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="#7A8FA6"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toTopOf="@id/tvCityProfile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/middle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCityProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_regular"
                android:includeFontPadding="false"
                android:maxLines="1"
                setTextEmptyCheck="@{bean.country}"
                android:textColor="#7A8FA6"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toTopOf="@id/tvPointsProfile"
                app:layout_constraintStart_toStartOf="@+id/tvUsernameProfile"
                app:layout_constraintTop_toBottomOf="@id/tvUsernameProfile" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCountryCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_regular"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text='@{bean.city != null &amp;&amp; !bean.city.contains("null") ? bean.city  : "-"}'
                android:textColor="#7A8FA6"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toTopOf="@id/tvPointsProfile"
                app:layout_constraintStart_toEndOf="@+id/tvCityProfile"
                app:layout_constraintTop_toBottomOf="@id/tvUsernameProfile" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPointsProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:includeFontPadding="false"
                android:text='@{String.valueOf(bean.score)+"0.pts"}'
                android:textColor="#7A8FA6"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toEndOf="@+id/middle"
                app:layout_constraintTop_toBottomOf="@id/tvCityProfile" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTotalFollowers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_semi_bold"
                android:gravity="center"
                android:text="@{String.valueOf(bean.followersCount)}"
                android:textColor="#646464"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintEnd_toEndOf="@+id/tvTotalFollowersCount"
                app:layout_constraintStart_toStartOf="@+id/tvTotalFollowersCount"
                app:layout_constraintTop_toBottomOf="@+id/tvPointsProfile"
                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTotalFollowersCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:text="@string/followers"
                android:onClick="@{v->vm.onClick(v)}"
                android:textColor="#646464"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintStart_toStartOf="@+id/middle"
                app:layout_constraintTop_toBottomOf="@+id/tvTotalFollowers" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_15sdp"
                app:layout_constraintBottom_toBottomOf="@+id/tvTotalFollowersCount"
                app:layout_constraintStart_toEndOf="@+id/tvTotalFollowersCount"
                app:layout_constraintTop_toTopOf="@+id/tvTotalFollowers" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNbTotalFollowing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_semi_bold"
                android:gravity="center"
                android:text="@{String.valueOf(bean.followingCount)}"
                android:textColor="#646464"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintEnd_toEndOf="@+id/tvTotalFollowing"
                app:layout_constraintStart_toStartOf="@+id/tvTotalFollowing"
                app:layout_constraintTop_toBottomOf="@+id/tvPointsProfile" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTotalFollowing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/inter_medium"
                android:onClick="@{v->vm.onClick(v)}"
                android:gravity="center"
                android:text="@string/following"
                android:textColor="#646464"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintStart_toStartOf="@id/divider"
                app:layout_constraintTop_toBottomOf="@+id/tvNbTotalFollowing" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPlayerBottomInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/clPlayerTopInfo">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPlayerPosition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/edit_text_bg_with_radius_10"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:foreground="@drawable/ripple_effect"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:paddingHorizontal="4dp"
                android:paddingVertical="18dp"
                setTextEmptyCheck="@{bean.position}"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvPlayerHeight"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivPlayerPosition"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_margin="4dp"
                android:elevation="10dp"
                android:src="@drawable/player_colored_icon"
                app:layout_constraintStart_toStartOf="@+id/tvPlayerPosition"
                app:layout_constraintTop_toTopOf="@+id/tvPlayerPosition" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPlayerHeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="15dp"
                android:background="@drawable/card_not_selected"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:foreground="@drawable/ripple_effect"
                android:onClick="@{v->vm.onClick(v)}"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:paddingHorizontal="4dp"
                android:paddingVertical="18dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvPlayerPosition"
                app:layout_constraintEnd_toStartOf="@id/tvPlayerAge"
                app:layout_constraintStart_toEndOf="@id/tvPlayerPosition"
                app:layout_constraintTop_toTopOf="@+id/tvPlayerPosition" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/player_height_icon_image"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_margin="4dp"
                android:elevation="10dp"
                android:src="@drawable/round_height_24"
                app:layout_constraintStart_toStartOf="@+id/tvPlayerHeight"
                app:layout_constraintTop_toTopOf="@+id/tvPlayerHeight" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPlayerAge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="15dp"
                android:background="@drawable/card_not_selected"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:foreground="@drawable/ripple_effect"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:paddingHorizontal="4dp"
                android:paddingVertical="18dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvPlayerPosition"
                app:layout_constraintEnd_toStartOf="@id/tvPlayerTeam"
                app:layout_constraintStart_toEndOf="@id/tvPlayerHeight"
                app:layout_constraintTop_toTopOf="@+id/tvPlayerPosition" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivPlayerAge"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_margin="4dp"
                android:elevation="10dp"
                android:src="@drawable/round_age_24"
                app:layout_constraintStart_toStartOf="@+id/tvPlayerAge"
                app:layout_constraintTop_toTopOf="@+id/tvPlayerAge" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPlayerTeam"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="15dp"
                android:background="@drawable/card_not_selected"
                android:ellipsize="end"
                android:fontFamily="@font/inter_bold"
                android:foreground="@drawable/ripple_effect"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:paddingHorizontal="4dp"
                android:paddingVertical="18dp"
                setTextEmptyCheck="@{bean.favoriteProTeam.name}"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvPlayerAge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvPlayerAge"
                app:layout_constraintTop_toTopOf="@+id/tvPlayerAge" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivPlayerTeam"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_margin="4dp"
                android:elevation="10dp"
                setImageTeam="@{bean.favoriteProTeam.imageURL}"
                android:src="@drawable/round_team_24"
                app:layout_constraintStart_toStartOf="@+id/tvPlayerTeam"
                app:layout_constraintTop_toTopOf="@+id/tvPlayerTeam" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/CardProfileTab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_8sdp"
            app:cardBackgroundColor="@color/tab_background_color"
            app:cardCornerRadius="6dp"
            app:layout_constraintTop_toBottomOf="@+id/clPlayerBottomInfoLayout">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/_2sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPost"
                    style="@style/TextView.InterMedium"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:background="@{pos==1?@drawable/round_corner_bg:null}"
                    android:gravity="center"
                    android:onClick="@{v->vm.onClick(v)}"
                    android:text="@string/profile_Posts"
                    android:textColor="@color/black_000000"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tvClassmates"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/first"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="0dp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_marginStart="-8dp"
                    android:background="@color/grey"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPost"
                    app:layout_constraintStart_toStartOf="@+id/tvClassmates"
                    app:layout_constraintTop_toTopOf="@+id/tvPost" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvClassmates"
                    style="@style/TextView.InterMedium"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:background="@{pos==2?@drawable/round_corner_bg:null}"
                    android:gravity="center"
                    android:onClick="@{v->vm.onClick(v)}"
                    android:text="Ranking"
                    android:textColor="@color/black_000000"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPost"
                    app:layout_constraintEnd_toStartOf="@+id/tvStatistiques"
                    app:layout_constraintStart_toEndOf="@+id/tvPost"
                    app:layout_constraintTop_toTopOf="@+id/tvPost" />

                <View
                    android:id="@+id/second"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="0dp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:background="@color/grey"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPost"
                    app:layout_constraintStart_toStartOf="@+id/tvStatistiques"
                    app:layout_constraintTop_toTopOf="@+id/tvPost" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvStatistiques"
                    style="@style/TextView.InterMedium"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@{pos==3?@drawable/round_corner_bg:null}"
                    android:gravity="center"
                    android:onClick="@{v->vm.onClick(v)}"
                    android:text="@string/statistics"
                    android:textColor="@color/black_000000"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPost"
                    app:layout_constraintEnd_toStartOf="@+id/tvInventaire"
                    app:layout_constraintStart_toEndOf="@+id/tvClassmates"
                    app:layout_constraintTop_toTopOf="@+id/tvPost" />


                <View
                    android:id="@+id/third"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="0dp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:background="@color/grey"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPost"
                    app:layout_constraintEnd_toEndOf="@+id/tvStatistiques"
                    app:layout_constraintStart_toStartOf="@+id/tvInventaire"
                    app:layout_constraintTop_toTopOf="@+id/tvPost" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvInventaire"
                    style="@style/TextView.InterMedium"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:background="@{pos==4?@drawable/round_corner_bg:null}"
                    android:gravity="center"
                    android:onClick="@{v->vm.onClick(v)}"
                    android:text="@string/inventory"
                    android:textColor="@color/black_000000"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPost"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvStatistiques"
                    app:layout_constraintTop_toTopOf="@+id/tvPost" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerProfile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CardProfileTab" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
   <variable
       name="vm"
       type="com.beballer.beballer.ui.player.dash_board.find.game.find_game.FindGameFragmentVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.dash_board.find.game.find_game.FindGameFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_65sdp"
            android:background="@color/fafafa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cancelImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivNotification"
                app:layout_constraintBottom_toBottomOf="@+id/ivNotification"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:onClick="@{v->vm.onClick(v)}"
                android:padding="@dimen/_5ssp"
                android:src="@drawable/back_button" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                style="@style/TextView.InterMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-5dp"
                android:gravity="center"
                android:text="Game"
                android:layout_marginBottom="@dimen/_2sdp"
                android:textSize="@dimen/_16ssp"
                app:layout_constraintBottom_toBottomOf="@+id/ivNotification"
                app:layout_constraintStart_toEndOf="@+id/cancelImage"
                app:layout_constraintTop_toTopOf="@+id/ivNotification" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/top_right_angle_red" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivNotification"
                android:layout_width="@dimen/_24sdp"
                android:onClick="@{v->vm.onClick(v)}"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@drawable/only_strock"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:src="@drawable/bell"
                android:tint="@color/white"
                app:layout_constraintStart_toStartOf="@+id/ivNotification"
                app:layout_constraintTop_toTopOf="@+id/ivNotification"
                app:layout_constraintBottom_toBottomOf="@+id/ivNotification"
                app:layout_constraintEnd_toEndOf="@+id/ivNotification" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.SearchView
            android:id="@+id/courtsSearchView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:background="@drawable/search_view_background"
            android:backgroundTint="@color/eeeeef"
            android:fontFamily="@font/inter_regular"
            app:defaultQueryHint="Look up a courts"
            app:iconifiedByDefault="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clHeader"
            app:queryBackground="@null"
            app:searchIcon="@drawable/ic_search" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            app:dividerColor="#D4D4D4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/courtsSearchView" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCourtHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="@dimen/_16sdp"
            android:ellipsize="end"
            android:fontFamily="@font/inter_semi_bold"
            android:includeFontPadding="false"
            android:text="Courts nearby :"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintEnd_toStartOf="@id/cardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            app:layout_constraintBottom_toBottomOf="@+id/tvCourtHeader"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            app:layout_constraintTop_toTopOf="@+id/tvCourtHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAddCourt"
                android:layout_width="wrap_content"
                style="@style/TextView.InterMedium"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:paddingVertical="@dimen/_6sdp"
                android:onClick="@{v->vm.onClick(v)}"
                android:paddingHorizontal="@dimen/_15sdp"
                android:background="@drawable/grediant_background"
                android:text="@string/add_a_courts"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFindGame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_15sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCourtHeader"
            tools:listitem="@layout/find_game_rv_item" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="callback"
            type="com.beballer.beballer.base.SimpleRecyclerViewAdapter.SimpleCallback" />

        <variable
            name="bean"
            type="com.beballer.beballer.data.model.PlayerData" />

        <variable
            name="pos"
            type="Integer" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clPlayerPost"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:layout_margin="@dimen/_4sdp"
        android:onClick="@{v->callback.onItemClick(v,bean,pos)}"
        android:background="@drawable/unselected_tab_bg"
        android:backgroundTint="@color/e9e9ea"
        android:elevation="@dimen/_2sdp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivProfilePost"
            setImagePostUrl="@{bean.image}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:visibility="@{bean.contentType.equals(`image`) ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivProfileVideo"
            setImagePostUrl="@{bean.video}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:visibility="@{bean.contentType.equals(`video`) ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvProfilePost"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:fontFamily="@font/inter_semi_bold"
            android:gravity="start|center"
            android:includeFontPadding="false"
            android:maxLines="9"
            android:background="@drawable/edit_text_bg_with_radius_10"
            android:backgroundTint="@color/white"
            android:paddingHorizontal="@dimen/_8sdp"
            android:singleLine="false"
            android:text="@{bean.description}"
            android:textColor="#1B1B1B"
            android:textSize="12sp"
            android:visibility="@{bean.contentType.equals(`textOnly`) ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
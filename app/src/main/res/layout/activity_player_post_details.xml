<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.beballer.beballer.ui.player.post_details.PlayerPostDetailsActivityVM" />

        <variable
            name="bean"
            type="com.beballer.beballer.data.model.PlayerPostData" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".ui.player.post_details.PlayerPostDetailsActivity">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:onClick="@{v->vm.onClick(v)}"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/back_button"
            app:layout_constraintBottom_toBottomOf="@+id/clPostHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/clPostHeader" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPostHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivBack"
            app:layout_constraintTop_toTopOf="parent">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivPerson"
                setImageFromUrl="@{bean.publisherData.profilePicture}"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPublisherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:ellipsize="end"
                android:fontFamily="@font/inter_semi_bold"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:text='@{((bean.publisherData.firstName != null ? bean.publisherData.firstName : "user") + " " + (bean.publisherData.lastName != null ? bean.publisherData.lastName : "")).trim()}'
                android:textColor="#1B1B1B"
                android:textSize="@dimen/_13ssp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toTopOf="@+id/tvPublisherUsername"
                app:layout_constraintEnd_toStartOf="@id/ivPublisherVerification"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/ivPerson"
                app:layout_constraintTop_toTopOf="@+id/ivPerson"
                app:layout_constraintVertical_chainStyle="packed" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivPublisherVerification"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:includeFontPadding="false"
                android:src="@drawable/ic_round_verified_24"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/tvPublisherName"
                app:layout_constraintStart_toEndOf="@id/tvPublisherName"
                app:layout_constraintTop_toTopOf="@+id/tvPublisherName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPublisherUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:includeFontPadding="false"
                android:text='@{((bean.publisherData.username != null ? bean.publisherData.username : "@user")).trim()}'
                android:textColor="@color/grey_50"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintBottom_toTopOf="@id/tvPublisherSector"
                app:layout_constraintStart_toStartOf="@+id/tvPublisherName"
                app:layout_constraintTop_toBottomOf="@+id/tvPublisherName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPublisherSector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text='@{((bean.publisherData.country != null ? bean.publisherData.country : "") + " " + (bean.publisherData.city != null ? bean.publisherData.city : "")).trim()}'
                android:textColor="@color/grey_50"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintBottom_toBottomOf="@+id/ivPerson"
                app:layout_constraintStart_toStartOf="@+id/tvPublisherName"
                app:layout_constraintTop_toBottomOf="@+id/tvPublisherUsername" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:fontFamily="@font/inter_regular"
                android:text="21 h"
                android:textColor="@color/beballer_medium_grey"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivPublisherVerification" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/customScrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@+id/ivProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivBack">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/handelAllLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clImageType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardPost"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardElevation="@dimen/_2ssp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/clEventLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:animateLayoutChanges="true"
                                android:orientation="vertical">


                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/ivEvent"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_300sdp"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/iv_event"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.cardview.widget.CardView>


                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clVideoType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardPostVideoPlayer"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:layout_constraintDimensionRatio="3:4"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">


                            <androidx.media3.ui.PlayerView
                                android:id="@+id/playerView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="gone"
                                app:resize_mode="zoom"
                                app:show_buffering="when_playing"
                                app:use_controller="true" />

                        </androidx.cardview.widget.CardView>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cardPostVideoPlayer" />

                    </androidx.constraintlayout.widget.ConstraintLayout>



                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTextDescType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:autoLink="all"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="@color/black_000000"
                        android:textSize="@dimen/_10ssp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <HorizontalScrollView
                    android:id="@+id/buttonsLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    app:layout_constraintEnd_toStartOf="@id/tvSubscribe"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/handelAllLayout">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/postLikeImageImage"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginStart="12dp"
                            android:onClick="@{v->vm.onClick(v)}"
                            android:padding="@dimen/_3sdp"
                            android:src="@drawable/ic_like_0_24"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="1.0" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvLike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:fontFamily="@font/inter_semi_bold"
                            android:includeFontPadding="false"
                            android:textColor="#707070"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/postLikeImageImage"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="HardcodedText" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/postCommentImage"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:onClick="@{v->vm.onClick(v)}"
                            android:padding="@dimen/_2sdp"
                            app:layout_constraintStart_toEndOf="@id/tvLike"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_bubble_left_24"
                            app:tint="@color/black" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvComment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:fontFamily="@font/inter_semi_bold"
                            android:includeFontPadding="false"
                            android:textColor="#707070"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/postCommentImage"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="HardcodedText" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/postShareImage"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:padding="@dimen/_2sdp"
                            app:layout_constraintStart_toEndOf="@id/tvComment"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_arrowshape_turn_up_right_24"
                            app:tint="@color/black" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/share_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:fontFamily="@font/inter_semi_bold"
                            android:includeFontPadding="false"
                            android:text="0"
                            android:textColor="#707070"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/postShareImage"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="HardcodedText" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </HorizontalScrollView>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvSubscribe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:fontFamily="@font/inter_bold"
                    android:includeFontPadding="false"
                    android:visibility="gone"
                    android:paddingHorizontal="@dimen/_4sdp"
                    android:paddingVertical="@dimen/_8ssp"
                    android:text="@string/subscribe"
                    android:textColor="@color/beballer_blue"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintBottom_toBottomOf="@id/buttonsLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/buttonsLayout"
                    app:layout_constraintTop_toTopOf="@id/buttonsLayout"
                    app:layout_constraintVertical_bias="0.555" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clSecond"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/buttonsLayout">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivPersonSecond"
                            setImageFromUrl="@{bean.publisherData.profilePicture}"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvSecondName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:ellipsize="end"
                            android:fontFamily="@font/inter_semi_bold"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:text='@{((bean.publisherData.firstName != null ? bean.publisherData.firstName : "user") + " " + (bean.publisherData.lastName != null ? bean.publisherData.lastName : "")).trim()}'
                            android:textColor="#1B1B1B"
                            android:textSize="@dimen/_13ssp"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintBottom_toTopOf="@+id/tvSecondUsername"
                            app:layout_constraintEnd_toStartOf="@id/ivSecondVerification"
                            app:layout_constraintHorizontal_bias="0"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toEndOf="@+id/ivPersonSecond"
                            app:layout_constraintTop_toTopOf="@+id/ivPersonSecond"
                            app:layout_constraintVertical_chainStyle="packed" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivSecondVerification"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:src="@drawable/ic_round_verified_24"
                            app:layout_constrainedWidth="true"
                            app:layout_constraintBottom_toBottomOf="@+id/tvSecondName"
                            app:layout_constraintStart_toEndOf="@id/tvSecondName"
                            app:layout_constraintTop_toTopOf="@+id/tvSecondName" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvSecondUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:includeFontPadding="false"
                            android:text='@{((bean.publisherData.username != null ? bean.publisherData.username : "@user")).trim()}'
                            android:textColor="@color/grey_50"
                            android:textSize="@dimen/_8ssp"
                            app:layout_constraintBottom_toTopOf="@id/tvSecondSector"
                            app:layout_constraintStart_toStartOf="@+id/tvSecondName"
                            app:layout_constraintTop_toBottomOf="@+id/tvSecondName" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvSecondSector"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:includeFontPadding="false"
                            android:textColor="@color/grey_50"
                            android:textSize="@dimen/_8ssp"
                            app:layout_constraintBottom_toBottomOf="@+id/ivPersonSecond"
                            app:layout_constraintStart_toStartOf="@+id/tvSecondName"
                            app:layout_constraintTop_toBottomOf="@+id/tvSecondUsername" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvSecondHour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_13sdp"
                            android:fontFamily="@font/inter_regular"
                            android:text="21 h"
                            android:textColor="@color/beballer_medium_grey"
                            android:textSize="@dimen/_8ssp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/ivSecondVerification" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvHeaderType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:autoLink="all"
                        android:fontFamily="@font/inter_medium"
                        android:text="Benef has added a new 33-hectare playground in the city.Big thanks for your contribution 🙌"
                        android:textColor="@color/black_000000"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/clHeader" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSocialChat"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_20sdp"
                    android:nestedScrollingEnabled="false"
                    android:paddingBottom="@dimen/_20sdp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/clSecond"
                    tools:listitem="@layout/social_rv_chat_item" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivProfile"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/ic_round_account_circle_40"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etSendMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/player_bg"
            android:backgroundTint="#f2f3f5"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/inter_regular"
            android:hint="add a comment"
            android:includeFontPadding="false"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:overScrollMode="always"
            android:paddingVertical="@dimen/_8sdp"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_32sdp"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:textColor="@color/black_000000"
            android:textColorHint="#D1D1D1"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintBottom_toBottomOf="@+id/ivProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivProfile"
            app:layout_constraintTop_toTopOf="@+id/ivProfile" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSend"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:onClick="@{v->vm.onClick(v)}"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/send"
            android:tint="#3e7af7"
            app:layout_constraintBottom_toBottomOf="@+id/etSendMessage"
            app:layout_constraintEnd_toEndOf="@+id/etSendMessage"
            app:layout_constraintTop_toTopOf="@+id/etSendMessage" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>